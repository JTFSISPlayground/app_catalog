<h1>Application Index</h1>
<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Acronym</th>
      <th>Deploy date</th>
      <th>Version</th>
      <th>Prog lang</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= link_to app.title, app %></td>
        <td><%= app.acronym %></td>
        <td><%= app.deploy_date %></td>
        <td><%= app.version %></td>
        <td><%= app.prog_lang_1 %></td>
        <% if @user.present? %>
        <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New App', new_app_path %>

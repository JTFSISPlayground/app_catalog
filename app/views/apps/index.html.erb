<div class="row">
  <div class="col-lg-6">
    <h1>Application Index</h1>
  </div>

  </div>

<div class="table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th><%= sort_link(@q, :acronym) %></th>
      <th><%= sort_link(@q, :deploy_date, 'Deploy date') %></th>
      <th>Version</th>
      <th><%= sort_link(@q, :prog_lang_1, 'Prog Lang') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
    <tr>
      <% if ((app.prog_lang_eol_1- Date.today) < @year1) || ((app.framework_eol_1- Date.today) < @year1) || ((app.tech_stack_eol_1 - Date.today) < @year1) || ((app.tech_stack_eol_2 - Date.today) < @year1) || ((app.tech_stack_eol_3 - Date.today) < @year1) || ((app.tech_stack_eol_4 - Date.today) < @year1) %>
        <% ((app.tech_stack_eol_5 - Date.today) < @year1) || ((app.tech_stack_eol_6 - Date.today) < @year1) %>
        <td class="danger">
          <%= link_to app.title, app %></td>
          <% elsif ((@year1 < (app.prog_lang_eol_1- Date.today)) && ((app.prog_lang_eol_1- Date.today) < @year2)) || ((@year1 < (app.framework_eol_1- Date.today)) && ((app.framework_eol_1- Date.today) < @year2)) || ((@year1 < (app.tech_stack_eol_1- Date.today)) && ((app.tech_stack_eol_1- Date.today) < @year2)) || ((@year1 < (app.tech_stack_eol_2- Date.today)) && ((app.tech_stack_eol_2- Date.today) < @year2)) || ((@year1 < (app.tech_stack_eol_3- Date.today)) && ((app.tech_stack_eol_3- Date.today) < @year2)) || ((@year1 < (app.tech_stack_eol_4- Date.today)) && ((app.tech_stack_eol_4- Date.today) < @year2)) %>
            <% ((@year1 < (app.tech_stack_eol_5- Date.today)) && ((app.tech_stack_eol_5- Date.today) < @year2)) || ((@year1 < (app.tech_stack_eol_1- Date.today)) && ((app.tech_stack_eol_6- Date.today) < @year2)) %>
            <td class="warning">
              <%= link_to app.title, app %></td>
          <% elsif (@year2 < (app.prog_lang_eol_1- Date.today)) && (@year2 < (app.framework_eol_1- Date.today)) && (@year2 < (app.tech_stack_eol_1 - Date.today)) && (@year2 < (app.tech_stack_eol_2 - Date.today)) && (@year2 < (app.tech_stack_eol_3 - Date.today)) && (@year2 < (app.tech_stack_eol_4 - Date.today)) %>
            <% (@year2 < (app.tech_stack_eol_5 - Date.today)) && (@year2 < (app.tech_stack_eol_6 - Date.today)) %>
            <td>
              <%= link_to app.title, app %></td>
          <% end %>
        <td><%= app.acronym %></td>
        <td><%= app.deploy_date %></td>
        <td><%= app.version %></td>
        <td><%= app.prog_lang_1 %></td>
        <% if @user.present? %>
          <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New App', new_app_path, class: 'btn btn-primary' %>
